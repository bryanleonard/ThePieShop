@model IEnumerable<Pie>

@{
    ViewData["Title"] = "Pie Management";
}

<h2>Pie Management</h2>
<table class="table table-condensed table-bordered">
@if (!Model.Any())
{
    <tr><td colspan="3" class="text-center">No pies at this point :()</td></tr>
}
else
{
    <tr>
        <th class="text-nowrap">Pie ID</th>
        <th>Name</th>
        <th>Image</th>
        <th class="text-nowrap">In stock</th>
        <th>Price</th>
        <th>Actions</th>
    </tr>
    @foreach (var pie in Model)
    {
        <tr>
            <td>@pie.PieId</td>
            <td>@pie.Name</td>
            <td><img src="@pie.ImageThumbnailUrl" style="width: 50%;" /></td>
            <td class="text-center"><input type="checkbox" asp-for="@pie.InStock" />
            <td>@pie.Price</td>
            <td>
                <form asp-action="DeletePie" asp-route-pieId="@pie.PieId" method="post">
                    <a class="btn btn-sm btn-block btn-primary" style="margin-bottom: .5rem" asp-action="EditPie" asp-route-pieId="@pie.PieId">Edit</a>
                    <button type="submit" onclick="return confirm('Do you really want to delete this pie?');" class="btn btn-sm btn-block btn-primary">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
}
</table>

<p>
    <a class="btn btn-primary" asp-action="AddPie">Add new pie</a>
</p>

